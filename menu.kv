<Menu>:
    MDBoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 0, 50
        spacing: 15

        MDLabel:
            text: "Field Surv - Survey the Nature"
            halign: "center"
            size_hint: None, None
            size: root.width, 400
            font_style: 'H4'
            md_bg_color: app.theme_cls.primary_light

        MDLabel:
            size_hint: None, None
            size: root.width, 150

        MDFillRoundFlatButton:
            text: "Simple Point recordings"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release:
                app.root.current = 'simple_rec'
                root.manager.transition.direction = 'left'

        MDFillRoundFlatButton:
            text: "Running Projects"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release:
                app.root.current = 'running_projects'
                root.manager.transition.direction = 'left'

        MDFillRoundFlatButton:
            text: "Create a Project"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release:
                app.root.current = 'create_project'
                root.manager.transition.direction = 'left'

        MDFillRoundFlatButton:
            text: "Settings"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release:
                app.root.current = 'settings'
                root.manager.transition.direction = 'left'